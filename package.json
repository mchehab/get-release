{
  "name": "get-release",
  "version": "1.0.0",
  "description": "Get github release information",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint 'src/**.js' --fix",
    "test": "eslint 'src/**.js' && jest --coverage",
    "build": "ncc build src/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mchehab/get-release"
  },
  "keywords": [
    "actions",
    "node"
  ],
  "author": "GitHub",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.27.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^2.7.0",
    "eslint-plugin-react": "^7.21.3",
    "husky": "^3.0.5",
    "jest": "^25.5.4",
    "prettier": "^1.16.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/get-release.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add dist/"
    }
  },
  "bugs": {
    "url": "https://github.com/mchehab/get-release/issues"
  },
  "homepage": "https://github.com/mchehab/get_release"
}
